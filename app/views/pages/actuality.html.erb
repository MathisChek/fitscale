<%# BANNER WITH TEXT %>
<div class="banner-wrapper shadow-lg">
  <div class="chad-banner d-flex flex-column justify-content-center align-items-center p-5">
    <div class="animate__animated animate__slow animate__fadeInLeft text-light">
      <h1 class="">Welcome to FitScale</h1>
      <p class="mt-3 fw-light text-grey">Share and create your own experience.</p>
      <%= link_to "Create your own workout !", new_workout_path, class: "btn btn-lg btn-success text-dark shadow" %>
    </div>
  </div>
</div>

<%# BODY %>
<div class="container pt-5">
  <% if current_user.present? %>
    <h2>Begin your journey</h2>
    <div class="d-flex justify-content-between mb-5">
      <% if current_user.workouts.empty? %>
        <p>Don't have a workout yet ?</p>
      <% else %>
        <p>You currently have <strong><%= current_user.workouts.size %></strong> !</p>
        <p>But if you're tired of your current workouts, try to create a new one</p>
      <% end %>
      <div class="flex-grow-1 text-center">
        <%= link_to "Create your own workout !", new_workout_path, class: "btn btn-lg btn-outline-success text-dark shadow" %>
      </div>
    </div>
  <% end %>



  <h2 class="text-center mb-5">Interested in what's going on ?</h2>
  <%# HORIZONTAL SCROLL OF WORKOUTS %>
  <h3 class="mt-2">Recommended workouts  for beginners</h3>
  <div class="mb-5" style="overflow:hidden;">
    <div name="workouts scroll" class="workouts-wrapper d-flex p-3 rounded-5">
      <% @workouts.each do |workout| %>
        <div class="mx-3">
          <%= render "components/workout_card", workout: workout %>
        </div>
      <% end %>
    </div>
  </div>


  <%# HORIZONTAL SCROLL OF WORKOUTS %>
  <h3 class="m-2">Popular workouts !</h3>
  <div name="workouts scroll" class="workouts-wrapper d-flex p-3 rounded-5 shadow">
    <% @workouts.each do |workout| %>
      <div class="m-3">
        <%= render "components/workout_card", workout: workout %>
      </div>
    <% end %>
  </div>
</div>
