<%# BANNER WITH TEXT %>
<div class="banner-wrapper shadow-lg">
  <div class="chad-banner d-flex flex-column justify-content-center p-5 animate__animated animate__slideInRight">
    <h1 class="animate__animated animate__slow animate__fadeInLeft">Welcome to FitScale,</h1>
    <p class="mt-3 animate__animated animate__slow">Share and create your own experience.</p>
  </div>
</div>

<%# BODY %>
<div class="container pt-5">
  <h2 class="">Interested in what's going on ?</h2>

  <%# HORIZONTAL SCROLL OF WORKOUTS %>
  <h3 class="m-2">Recommended workouts  for beginners</h3>
  <div style="overflow:hidden;">
    <div name="workouts scroll" class="workouts-wrapper d-flex p-3 rounded-5">
      <% @workouts.each do |workout| %>
        <div class="mx-3">
          <%= render "components/workout_card", workout: workout %>
        </div>
      <% end %>
    </div>
  </div>


  <%# HORIZONTAL SCROLL OF WORKOUTS %>
  <h3 class="m-2">Popular workouts !</h3>
  <div name="workouts scroll" class="workouts-wrapper d-flex p-3 rounded-5 shadow">
    <% @workouts.each do |workout| %>
      <div class="m-3">
        <%= render "components/workout_card", workout: workout %>
      </div>
    <% end %>
  </div>
</div>
