<div class="d-flex justify-content-center" style="background-color: var(--c-gray-800);">
  <div class="app text-white p-2">
    <%# BANDEAU/NAVBAR %>
    <div name="bandeau sup" class="app-header">
      <h1 class="logo">Fitscale</h1>
      <div class="app-header-navigation">
        <div class="tabs m-2">
          <h5 class="active">Dashboard</h2>
          <h5>Settings</h2>
        </div>

      </div>
        <div class="d-flex align-items-center">
          <h5 class="pe-3"><%= current_user.name %></h2>
          <%= image_tag "profile.jpg", class: "avatar-large dropdown-toggle" %>
        </div>
    </div>

    <%# BODY %>
    <div class="app-body">

      <%# TAB MENU %>
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Home</button>
          <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">My sessions</button>
        </div>
      </nav>

      <div name="content" class="tab-content" id="nav-tabContent" style="width: 50vw">
        <%# TABS %>

        <%# USER STATS %>
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
          <div class="d-flex px-5">
            <div class="pe-5 me-5">
              <h2>Details</h2>
              <p>Number of workouts created : <%= Workout.where(user_id: current_user.id).count %></p>
              <p>Number of workouts added : <%= Training.where(user_id: current_user.id).count %></p>
              <p>Total workouts : <%= Workout.where(user_id: current_user.id).count + Training.where(user_id: current_user.id).count %></p>
            </div>
            <%= render "components/bar_chart_dashboard", hash: @hash, k: @k, v: @v  %>
          </div>

          <div>
            <%= render "components/multi_bar_chart_dashboard", k: @k %>
          </div>
        </div>

        <%# CALENDAR %>
        <div class="tab-pane fade active" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
          <%= render "components/calendar", sessions: @sessions %>
        </div>

      </div>
      <%# SIDE MENU WITH SESSIONS %>
      <div name="side menu">
        <ul class="list-unstyled">
          <% current_user.week_sessions.each do |session| %>
            <li class="d-flex">
              <div class="d-flex bg-dark border border-success m-2 py-2 ps-3 rounded-start-pill">

                <div class="d-flex flex-column justify-content-evenly pe-2" name="icon">
                  <i class="fa-regular fa-circle-xmark delete-btn"></i>
                  <%# link_to edit_session_path(session.id) do %>

                  <button type="button" class="btn text-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="fa-regular fa-pen-to-square"></i>
                  </button>

                  <%# end %>
                  <%= link_to user_my_dashboard_path(current_user), data: {turbo_method: :delete, turbo_confirm: "Vous Ã©tes sure ?"} do %>
                    <i class="fa-solid fa-trash delete-btn"></i>
                  <% end %>
                </div>

                <%= session.programing_at.strftime("%A") %> // <%= session.training.workout.name %> // <%= session.training.workout.exercices.count %> exercices
              </div>
            </li>
          <% end %>
        </ul>
      </div>

    </div>

  </div>
</div>

<%= render "components/modal_session" %>
