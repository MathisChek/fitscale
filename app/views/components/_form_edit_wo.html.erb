
<%= simple_form_for(:filter, url: edit_workout_path(workout), method: :get) do |f| %>
  <%= f.input :name %>
  <%= f.submit %>
<% end %>

<% exercices.each do |exercice| %>
  <div>
    <h6><%= exercice.name %></h6>
    <p><%= exercice.instructions %></p>
    <% if workout.exercices.include?(exercice) %>
      <p><%= workout.workout_sets.find_by(exercice: exercice).repetition %></p>
    <% else %>
      <%= simple_form_for([workout, workout_set]) do |f| %>
        <%= f.input :repetition %>
        <%= f.hidden_field :exercice_id, value: exercice.id %>
        <%= f.submit 'Submit exercice' %>
      <% end %>

    <% end %>
  </div>
<% end %>
