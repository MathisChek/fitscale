<% exercice = Exercice.find(workout_set.exercice_id) %>
<%= link_to exercice_path(exercice), style: "text-decoration: none" do %>
  <div class="card-exo d-flex justify-content-center align-items-center rounded m-3 scaller pe-4" style="width: auto">
    <% repetitions = workout_set.repetition %>

              <%# IMAGE %>
    <%= cl_image_tag exercice.image.key, height: 300, width: 300, crop: :fill, class: "" %>

              <%# INFO CARD %>
    <div style="width: 15vw">



              <%# DETAILS %>

        <div class= "card-exo-detail flex-grow-1 px-2 pt-3 mx-3">

          <span><strong><%= exercice.name%></strong></span>
          <br>
          <span class="ps-2"><i class="fa-solid fa-dumbbell"></i> <%= exercice.nature.capitalize  %></span>
          <br>
          <span class="ps-2"><i class="fa-solid fa-person"></i> <%= exercice.muscle.capitalize  %></span>
          <br>
          <span class="ps-2"><i class="fa-solid fa-gear"></i> <%= exercice.equipment.capitalize  %></span>
          <p><strong class="ps-2"><%= repetitions %></strong> Reps</p>
        </div>
      </div>

    <%# RATING %>
    <div class="div-img d-flex align-items-center p-3" style="width: 15vw; border: 1px solid #D8D8D8; border-right: 0px">

      <%= render "components/bar_chart", exercice: exercice %>


    </div>

  </div>
<% end %>
