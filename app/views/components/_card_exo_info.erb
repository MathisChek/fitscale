
  <div class="card-exo d-flex justify-content-between px-3 rounded mt-3" style="width: 50vw">

              <%# IMAGE %>
    <div class="card-exo-img">
      <%= image_tag "giga_chad.png" %>
    </div>

              <%# INFO CARD %>
    <div class="card-exo-infos ">

      <% repetitions = workout_set.repetition %>
      <% exercice = Exercice.find(workout_set.exercice_id) %>

        <div class= "card-exo-title d-flex flex-column align-items-center">
          <span><%= exercice.name%></span>
        </div>

              <%# DETAILS %>

        <div class= "card-exo-details d-flex flex-column align-items-start px-5">

          <div class="d-flex flex-column align-items-center">
            <span><i class="fa-solid fa-dumbbell"></i> <%= exercice.nature  %></span>
          </div>

          <div class="d-flex flex-column align-items-center">
            <span><i class="fa-solid fa-person"></i> <%= exercice.muscle  %></span>
          </div>

          <div class="d-flex flex-column align-items-center">
            <span><i class="fa-solid fa-gear"></i> <%= exercice.equipment  %></span>
          </div>

        </div>

            <%# INSTRUCTIONS %>
        <div class="d-flex flex-column align-items-center py-2">


          <p> <a class="btn btn-outline-success text-clack" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                instructions
              </a>
              <div class="collapse" id="collapseExample">
                <div class="card card-body">
                  <small><%= exercice.instructions  %></small></p>
                </div>
              </div>

        </div>
              <%# RATING %>

    </div>

    <div class="class-exo-stats d-flex flex-wrap flex-column justify-content-center px-5" >

      <p><i class="fa-solid fa-person-running"></i><strong class="text-warning"><%= exercice.dex %></strong></p>
      <p><i class="fa-solid fa-dumbbell"></i><strong class="text-danger"><%= exercice.str %></strong></p>
      <p><i class="fa-solid fa-lungs"></i><strong class="text-success"><%= exercice.end %></strong></p>
    </div>
    <div class="class-exo-stats d-flex flex-wrap flex-column justify-content-center px-5" >
      <p><i class="fas fa-thumbs-up" style="color: #2cb922;"></i> <%= rand(800..3500) %></p>
      <p><i class="fas fa-repeat" style="color: #f4ed1f;"></i>  <%= repetitions %></p>

    </div>

  </div>
