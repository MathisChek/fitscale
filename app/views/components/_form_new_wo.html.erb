<div class="container d-flex justify-content-center">
  <%# div formulaire %>

  <div  class="p-3">

    <div class = "px-3 py-4 border border-1 border-success bg-form" style="width: 450px">

      <div class= "d-flex justify-content-center mb-3">
        <h3><strong><span class="text-success">Step 1 :</span></strong> Create your workout</h3>
      </div>

      <%= simple_form_for @workout do |f|%>

        <div class ="form-input" name="input_form">
          <div class="mb-4">
            <%= f.input :name, style: "border-radius: 5px;"%>
          </div>
          <%= f.input :description %>

        </div>

        <div class ="d-flex justify-content-center mt-5 submit" name= "submit">

          <%= f.submit :submit, class: "btn px-3 py-2 rounded-pill border border-2 border border-success btn-submit btn-sub" %>

        </div>

      <% end %>
    </div>

  </div>
</div>
